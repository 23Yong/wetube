extends base.pug

block content 
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn Start Recording
        if errorMessage 
            span=errorMessage 
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File
            input(name="video", type="file", accept="video/*", required, id="video")
            label(for="thumb") Thumbnail File
            input(name="thumb", type="file", accept="image/*", required, id="thumb")
            input(name="title", placeholder="Title", required, type="text", maxlength=80)
            input(name="description", placeholder="Description", required, type="text", minlength=20)
            input(name="hashtags", placeholder="Hashtags, seperated by comma.", required, type="text")
            input(type="submit", value="Upload Video")

block scripts 
    script(src="/static/js/recorder.js")